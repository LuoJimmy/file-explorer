# EditorConfig is awesome: https://EditorConfig.org

# 表示是最顶层的配置文件
root = true

# 匹配全部文件
[*]
# 设置字符集
charset = utf-8
# 缩进风格，可选space、tab
indent_style = space
# 缩进的空格数
indent_size = 2
# 结尾换行符，可选lf、cr、crlf
end_of_line = lf
# 在文件结尾插入新行
insert_final_newline = true
# 删除一行中的前后空格
trim_trailing_whitespace = true

# 匹配md结尾的文件
[*.md]
trim_trailing_whitespace = false

# 匹配package.json和package-lock.json
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2 